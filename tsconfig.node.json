{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "dist-electron",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["vite.config.ts", "electron/**/*"],
  "exclude": ["node_modules", "dist", "release"]
}
